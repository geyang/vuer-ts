{
  "compilerOptions": {
    //    "strict": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "rootDir": "./",
    "outDir": "./dist",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vite/client",
      "node"
    ],
    "typeRoots": [
      "./",
      "./node_modules/@types/",
      "./types",
      "./node_modules"
    ],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    /* Enables experimental support for ES7 decorators. */
    "experimentalDecorators": true,
    /* Bundler mode */
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "sourceMap": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "./vuer/**/*"
  ],
  "exclude": [
    "node_modules",
    "tsconfig.ts",
    "tsconfig.node.ts"
  ]
}
